<html>
<head>
  <meta charset="utf-8">
  <title>fwS | Update Stock Details</title>
  <link rel="shortcut icon" href="logo.png" type="image/x-icon">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="plugins/fontawesome-free/css/all.min.css">
  <link rel="stylesheet" href="dist/css/adminlte.min.css">
  <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
</head>
<body class="hold-transition sidebar-mini" style="height: 820px;">
	<div class="wrapper">
		<nav class="main-header navbar navbar-expand navbar-white navbar-light">
			<ul class="navbar-nav">
				<li class="nav-item">
				<a class="nav-link" data-widget="pushmenu" href="#" role="button" style="margin-top: 5px; margin-bottom: -10px;"> 
                                           <i class="fas fa-bars"></i></a>
				</li>
				<li class="nav-item d-none d-sm-inline-block">
				<a href="/" class="nav-link">Home</a>
				</li>
			</ul>
		</nav>
		<aside class="main-sidebar sidebar-dark-primary elevation-4">
			<a href="/" class="brand-link">
			  <img src="logo.png"
				   alt="fwS Logo"
				   class="brand-image img-circle elevation-3">
			  <span class="brand-text font-weight-light">fwS</span>
			</a>
			<div class="sidebar" style="height: 760px;">
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                      <li class="nav-item">
                        <a href="/addstock" class="nav-link">
                          <i class="nav-icon far fa-circle text-info"></i>
                          <p>Add Product</p>
                        </a>
                      </li>
                      <li class="nav-item">
                        <a href="/salesdetails" class="nav-link">
                          <i class="nav-icon far fa-circle text-info"></i>
                          <p class="text">Sales Details</p>
                        </a>
                      </li>
                      <li class="nav-item">
                        <a href="/updatesales" class="nav-link">
                          <i class="nav-icon far fa-circle text-info"></i>
                          <p class="text">Update Sales</p>
                        </a>
                      </li>
                      
                    </ul>
                </nav>
			</div>
		</aside>
		<div class="content-wrapper">
			<section class="content-header">
				<h1>fwS Inventory Management</h1>
			</section>
			<section class="content">
                <div class="row">
                  <div class="col-md-6">
                      <form action="/update" method="POST">
                    <div class="card card-primary">
                      <div class="card-header">
                        <h3 class="card-title">Update Stock Details</h3>
                      </div>
                      <div class="card-body">
                        <div class="form-group">
                          <b>Product ID : <%= data[0]["Product ID"] %></b>
                          <input type="text" name="ProductID" value="<%= data[0]['Product ID'] %>" class="form-control" hidden>
                        </div>
                        <div class="form-group">
                            <b>Brand : <%= data[0]["Brand"] %></b>
                        </div>
                        <div class="form-group">
                            <b>Category : <%= data[0]["Category"] %></b>
                        </div>
                        <div class="form-group">
                            <b>Product name : <%= data[0]["Name"] %></b>
                        </div>
                        <div class="form-group">
                            <b>Old Quantity : <%= data[0]["Quantity"] %></b>
                        </div>
                        <div class="form-group">
                            <label for="NewQuantity">New Quantity</label>
                            <input type="text" placeholder="Quantity" name="NewQuantity" id="NewQuantity" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <b>Old Cost Price : <%= data[0]["Cost Price"] %></b>
                        </div>
                        <div class="form-group">
                            <label for="NewCostPrice">New Cost Price</label>
                            <input type="text" placeholder="Cost Price" name="NewCostPrice" id="NewCostPrice" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <b>Old Selling Price : <%= data[0]["Selling Price"] %></b>
                        </div>
                        <div class="form-group">
                            <label for="NewSellingPrice">New Selling Price</label>
                            <input type="text" placeholder="Selling Price" name="NewSellingPrice" id="NewSellingPrice" class="form-control" required>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="row">
                  <div class="col-12">
                    <input type="submit" value="Submit" class="btn btn-success" style="margin-right: 470px;margin-bottom: 20px;">
                    <a href="/" class="btn btn-secondary" style="margin-bottom: 20px;">Cancel</a>
                  </form>
                  </div>
                </div>
              </section>
		</div>
	</div>
